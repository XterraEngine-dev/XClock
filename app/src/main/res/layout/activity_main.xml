<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_second_sec"
                android:layout_width="30dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toEndOf="@+id/lottie_first_sec"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_fileName="0.json" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_first_sec"
                android:layout_width="30dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_fileName="0.json" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/lottie_second_hour"
                app:layout_constraintStart_toEndOf="@+id/lottie_second_hour"
                app:layout_constraintTop_toTopOf="@+id/lottie_second_hour" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_second_hour"
                android:layout_width="30dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toEndOf="@+id/lottie_first_hour"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_fileName="0.json" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_first_min"
                android:layout_width="30dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_fileName="0.json" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_second_min"
                android:layout_width="30dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toEndOf="@+id/lottie_first_min"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_fileName="0.json" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_first_hour"
                android:layout_width="30dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toStartOf="@+id/lottie_second_hour"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_fileName="0.json" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/lottie_first_sec"
                app:layout_constraintStart_toEndOf="@+id/lottie_second_min"
                app:layout_constraintTop_toTopOf="@+id/lottie_first_sec" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:id="@+id/actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Random"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>